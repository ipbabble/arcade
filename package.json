{
  "name": "asteroids-game",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "author": "ipbabble <whenry@redhat.com>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ipbabble/arcade.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.45.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.0.0",
    "typescript": "^5.5.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.0",
    "lint-staged": "^15.2.0",
    "simple-git-hooks": "^2.10.0"
  },
  "dependencies": {
    "pixi.js": "^7.4.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx --yes lint-staged",
    "pre-push": "npm run typecheck && npm run -s test -- --run"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,css,scss,json}": [
      "prettier --write"
    ]
  }
}
